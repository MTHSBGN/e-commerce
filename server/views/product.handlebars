{{> header @root}}
<div class="product">
  {{#with product}}
  <img src="http://localhost:3000/images/products/{{filename}}" class="product__image">
  <div class="product__info">
    <div style="display: none">{{sku_id}}</div>
    <div>
      <h2>{{name}}</h2>
      <p class="product__price">{{price}}â‚¬</p>
      <p>{{description}}</p>
    </div>
    <div class="product__basket">
      {{#if empty}}
      <p>Ce produit est en rupture de stock</p>
      {{else}}
      <input type="number" min="1" max="{{stock}}" class="form__input" id="quantity" value="1">
      <button type="button" id="add-basket" class="form__button product__button">Ajouter au panier</button>
      {{/if}}
    </div>
  </div>
  {{/with}}
</div>

<script src="http://localhost:3000/js/updateBasket.js"></script>
